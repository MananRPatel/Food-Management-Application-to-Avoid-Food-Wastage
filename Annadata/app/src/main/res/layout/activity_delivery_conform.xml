<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    tools:context=".activitys.DeliveryConform">


    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="315dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/border_textview"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="283dp"
        android:layout_height="308dp"
        android:layout_marginTop="163dp"
        android:background="@drawable/border_information"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/adcsellerfoodinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantata_one"
            android:text="@string/TextView"
            android:textColor="#043353"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/adcbuyername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/titillium_web"
                android:text="@string/TextView"
                android:textAlignment="viewEnd"
                android:textColor="#095D6A"

                tools:ignore="UnknownId" />

            <TextView
                android:id="@+id/adcbuyeraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/adcbuyername"
                android:text="@string/TextView"
                android:fontFamily="@font/titillium_web"
                android:textAlignment="viewEnd"
                android:textColor="#242121"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/adcfoodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/TextView"
            android:textAlignment="center"
            android:textColor="#884A6F"
            android:textSize="18sp"
            android:fontFamily="@font/adamina" />

        <TextView
            android:id="@+id/adcfoodweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/TextView"
            android:fontFamily="@font/caudex"
            android:textAlignment="center"
            android:textColor="#166138"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/adctotalorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/TextView"
            android:textColor="#8F8F29"
            android:fontFamily="@font/baumans"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adcdelivertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/TextView"
            android:fontFamily="@font/titillium_web"
            android:textColor="#CBAE0000"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/adcconformbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/sumit_button"
        android:text="@string/conform"
        android:textColor="@color/whiteTextColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7" />
</androidx.constraintlayout.widget.ConstraintLayout>