<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/card1_image"
    tools:context=".activitys.DeliveryConform">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="@string/delivery"
        android:textColor="#DD2C00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:contentDescription="@string/dsec"
        android:layout_marginTop="8dp"
        android:src="@drawable/rec4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="285dp"
        android:layout_height="310dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_edittext"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/adcsellerfoodinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/adamina"
            android:text="@string/TextView"
            android:textColor="#043353"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/adcbuyername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:text="@string/TextView"
                android:textAlignment="viewEnd"
                android:textColor="#095D6A"

                tools:ignore="UnknownId" />

            <TextView
                android:id="@+id/adcbuyeraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/adcbuyername"
                android:text="@string/TextView"
                android:textAlignment="viewEnd"
                android:textColor="#242121"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/adcfoodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/TextView"
            android:textAlignment="center"
            android:textColor="#884A6F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adcfoodweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/TextView"
            android:textAlignment="center"
            android:textColor="#166138"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/adctotalorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/TextView"
            android:textColor="#8F8F29"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adcdelivertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/TextView"
            android:textColor="#AE0000"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/adcconformbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/sumit_button"
        android:textStyle="bold"
        android:textColor="@color/whiteTextColor"
        android:text="@string/conform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7" />
</androidx.constraintlayout.widget.ConstraintLayout>